<%= form_for [:admin, @advertisement] do |f| %>
  <%= f.label :content%>
  <%= f.text_field :content, :class => "preview_column", :size => "100", :width => "50" %>
  </br>
  <%= f.label :weight%>
  <%= f.text_field :weight %>
  </br>
  <%= f.label :valid_to%>
  <%= f.date_select :valid_to %>
  </br>
  <%= f.submit %>
<%end%>
<div class="preview_area">
</div> 
<script type="text/javascript">
  $('.preview_column').on('change', function(){
      source_id = $(this).attr("id");
      $("." + source_id + "_preview").remove();
      $(".preview_area").append("<div class=" + source_id + "_preview></div>");

      $("." + source_id + "_preview").html($(this).val());
      }); 
</script>
