<%= form_for [:admin, @picture], :multipart => true do |pic|%>
  <%= pic.label :label, "Label"%>
  <%= pic.text_field :label, :size=>100, :width=>50 %>
  <%= pic.file_field :image%>
  <%= pic.submit :commit%>
<%end%>
<% unless @picture.image.to_s.nil? %>
  <%= image_tag @picture.image.to_s %>
<%end%>
