<div class="sign-in-form container">
  <%= form_tag sessions_path, :class => "form-stacked" do  %>
    <h2>Log in</h2>
    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password  %>
      <%= password_field_tag :password, params[:password]  %>
    </div>
    <ul><li><label>
      <%= check_box_tag :remember_me, params[:remember_me]  %>
      <span>Remember me</span>
    </label></li></ul>
    <div class="button">
      <%= submit_tag "Log in"%>
    </div>
  <% end %>
</div>
