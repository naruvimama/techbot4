<div class="article">
	
  <h1 class="title"><%= raw(@article.title) %></h1>
  <span class="mini-bar">
    <p class="date"><%= "#{@article.publish_date.to_date} ( #{pluralize @article.comments_attracted, 'comment'} )"%></p>
  </span></br>
  
  <h2 class="abstract"><%= raw(@article.abstract) %></h2>
  <div class="content">
    <%= raw(@article.story) %> 
  </div>

  <div class="comments"> 
    <% @comments.each do |comment|%>
      <div class="comment">
      	<span class="user_profile float-left"> <a href="#"><%= "#{comment.user.username}"%></a> <%= "#{date_or_time_if_today(comment.created_at)}"%></span>
      	</br>
        <div class="comment-content"> <%= comment.comment %> </div>
      </div>
    <% end %>
  </div>
  
  <div class="comment_area">
  <% if logged_in? %>
    <%= form_for @comment, :remote=>true, :url=>post_comment_path(@article),  :html=>{:class => "new-comment", :id=>"new_comment_form"}  do |com|%>
  
      <div class="new-comment">
        <%= com.text_area :comment %>
      </div>
      <%=submit_tag :post_comment%>
      <span class="save-comment">
        <%= com.submit :Create, :html => {:class=>"float-right"} %>
      </span>
      
    <% end %>  
  <% else %>
 
    <h1> To post a comment </h1>   		  
        <%= link_to "Sign in", login_path, {:class=>"sign_in_btn"} %>
        <%= link_to "Sign up", register_path, {:class=>"sign_up_btn"} %>
  
  <% end %>
  </div>
  
</div>

<script type="text/html" id="ich_comment">
  	<div class="comment">
  		<span class="user_profile float-left"> <a href="#"> {{username}} </a></span>
        <span class="date-time float-right"> {{created_at}}  </span>
        <div class="comment-content"> {{content}} </div>
    </div>
</script>